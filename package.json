{
  "name": "somfy-automation",
  "version": "0.1.0",
  "description": "A simple somfy automation node application for home use.",
  "main": "index.ts",
  "repository": "https://github.com/archcry/somfy-automation",
  "author": "Sander Koenders <sanderkoenders@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "NODE_ENV=development SCHEDULE_PATH=./schedule.json DEVICES_PATH=./devices.json DEVICE_GROUPS_PATH=./deviceGroups.json nodemon --exec 'ts-node' src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage",
    "lint": "eslint ./src --ext .ts"
  },
  "dependencies": {
    "body-parser": "^1.19.1",
    "debounce": "^1.2.1",
    "express": "^4.17.2",
    "express-basic-auth": "^1.2.1",
    "luxon": "^2.3.1",
    "node-fetch": "^2.6.7",
    "suncalc": "^1.9.0"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.1",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.3",
    "@types/luxon": "^2.0.9",
    "@types/node-fetch": "^2.5.12",
    "@types/suncalc": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "eslint": "8.3.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.3",
    "nodemon": "2.0.15",
    "prettier": "2.5.0",
    "prettier-plugin-organize-imports": "^2.3.4",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./*.{js,ts}": [
      "npx prettier --write",
      "npm run lint"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
